<Window x:Class="Hopscotch.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hopscotch"
        mc:Ignorable="d"
        Icon="./application.ico"
        Title="Grid Configuration" Height="150" Width="200">
    <StackPanel>
        <Button Content="Load grid.bin" Click="LoadButtonClicked" />
        <TextBlock Text="Columns (integer greater than 1)" />
        <TextBox x:Name="ColumnsTextBox" />
        <TextBlock Text="Rows (integer greater than 1)" />
        <TextBox x:Name="RowsTextBox" />
        <Button Content="OK" Click="OKButtonClicked" />
    </StackPanel>
</Window>
